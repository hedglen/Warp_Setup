{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "style": "full"
          },
          "foreground": "#ffffff",
          "background": "#6a0dad",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "display_stash_count": true,
            "display_status": true
          },
          "foreground": "#ffffff",
          "background": "#ff1493",
          "type": "git",
          "style": "powerline"
        },
        {
          "foreground": "#000000",
          "background": "#00ffcc",
          "type": "executiontime",
          "style": "powerline"
        },
        {
          "foreground": "#ffffff",
          "background": "#ff5555",
          "type": "exit",
          "style": "diamond"
        }
      ]
    }
  ],
  "version": 3
}
